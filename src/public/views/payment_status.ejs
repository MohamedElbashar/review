<style>
    .flex-container {
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: stretch;
    }

    .flex-col {
        flex-direction: column;
        display: flex;
    }

    .flex-row {
        flex-direction: row;
        display: flex;
    }

    .padding-20 {
        padding: 20px;
    }

    .surface_bgcolor {
        background-color: #F1F5FB;
    }

    .borderToolbar {
        border-bottom: 1px solid #EDEEF1;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        padding-bottom: 0;
        height: 70px;
        align-items: center;
        background-color: white;
        padding-left: 16px;
        padding-right: 16px;
    }

    .spce_between_center {
        justify-content: space-between;
        align-items: center;
    }

    .start_stetch {
        justify-content: start;
        align-items: stretch;
    }

    .start_center {
        justify-content: start;
        align-items: center;
    }

    .center_center {
        justify-content: center;
        align-items: center;
    }

    .row_gap_16 {
        gap: 16px;
    }

    .title {
        font-family: Poppins;
        font-size: 24px;
        font-weight: 700;
        line-height: 36px;
        letter-spacing: 0em;
        text-align: center;
        color: #1F2329;
    }

    .content_height {
        height: calc(100vh - 14vh);
    }

    .margin_top_0 {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    .margin_top_10 {
        margin-top: 10px;
    }

    .subtitle {
        font-family: Poppins;
        font-size: 15px;
        font-weight: 400;
        line-height: 23px;
        letter-spacing: 0em;
        text-align: center;
        color: #878E98;
    }

    .border-box {
        padding: 4px 24px 4px 24px;
        border-radius: 4px;
        border-top: 1px solid #878E98;
        border-bottom: 1px solid #878E98;
    }

    .border-line {
        padding: 4px 24px 4px 24px;
        border-radius: 4px;
        border: 1px solid #878E98;
    }

    .width_100 {
        width: 100%;
    }

    .text_align {
        text-align: center;
    }

    .line_height {
        line-height: 3;
    }

    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin: 20px;
    }

    .height_100Per {
        height: 100%;
    }

    .auth_Code {
        font-family: Poppins;
        font-size: 15px;
        font-weight: 400;
        /* line-height: 23px; */
        letter-spacing: 0em;
    }


    .code {
        font-family: Poppins;
        font-size: 15px;
        font-weight: 600;
        /* line-height: 23px; */
        letter-spacing: 0em;
        text-align: left;
    }

    select {
        padding: 4px 12px 4px 12px;
        /* Adjust the value as needed */
    }

    .copy {
        background: #0b65e44f;
        border: 1px solid #878E98;
        border-radius: 4px;
        padding: 2px;
        margin-top: 5px;
    }

    .home_button {
        display: flex;
        width: 176px;
        padding: 6px 20px;
        justify-content: center;
        align-items: center;
        gap: 8px;
        flex: 1 0 0;
        border-radius: 24px;
        background: var(--teal-500-baseline, #00AEAA);
        border: none !important;
        color: white;
    }

    #timer {
        font-size: 24px;
        font-weight: bold;
    }

    .image_width {
        width: 25%;
    }

    .h6-text {
        font-size: 28px;
        line-height: 125%;
    }

    .yellow-500 {
        color: #F5A800;
    }

    .width_25 {
        width: 25%;
    }

    .title-div {
        border-bottom: 1px solid #F3F7FD;
        justify-items: space-between;
        padding: 16px 20px 16px 20px;
    }
</style>

<body>
    <div class="flex-container">
        <!-- toolbar -->
        <nav class="navbar borderToolbar">
            <div class="flex-row spce_between_center">
                <div class="flex-col start_stetch" id="local_arr" local-array-data='<%= JSON.stringify(locale_arr) %>'>
                    <% if(locale=='en' ) { %>
                        <div class="flex-row start_center row_gap_16">
                            <img src="<%= logo %>">
                        </div>
                        <% } else if (locale=='ar' ) { %>
                            <select id="mySelect" name="mySelect" class="dropdown_width_height fw-400 font-poppins">
                                <% locale_arr.forEach(function(option) { %>
                                    <option value="<%= option.key %>" <%=option.key===locale ? 'selected' : '' %>>
                                        <%= option.value %>
                                    </option>
                                    <% }); %>
                            </select>
                            <% } %>
                </div>
            </div>
            <div class="flex-row start_center">
                <% if(locale=='en' ) { %>
                    <select id="mySelect" name="mySelect" class="dropdown_width_height fw-400 font-poppins">
                        <% locale_arr.forEach(function(option) { %>
                            <option value="<%= option.key %>" <%=option.key===locale ? 'selected' : '' %>><%=
                                    option.value %>
                            </option>
                            <% }); %>
                    </select>
                    <% } else if (locale=='ar' ) { %>
                        <div class="flex-row start_center row_gap_16">
                            <img src="<%= logo %>">
                        </div>
