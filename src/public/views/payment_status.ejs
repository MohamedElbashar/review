                                        <button type="button" class="home_button margin_top_10" id="backtohome"
                                            data-options='<%= frontend_cb_success_url %>'>Back to Home</button>
                                        <div id="timer" class="margin_top_10 subtitle">10</div>
                                        <% } %>
                                            <% if (frontend_cb_success_url && frontend_cb_success_url !='' &&
                                                (payment_status==='success' || payment_status==='completed' ) &&
                                                locale=='ar' ) { %>
                                                <div class="message margin_top_10 subtitle width_80">اكتمل الدفع سيتم
                                                    توجيهة الي الصفحة الرئيسية
                                                </div>
                                                <button type="button" class="home_button margin_top_10" id="backtohome"
